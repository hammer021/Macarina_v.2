<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ActivityOrderPcs">

    <ImageView
        android:id="@+id/imageBrg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtnamabrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Nama Barang"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageBrg"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txthargabrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:inputType="number"
        android:text="Harga"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnamabrg"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/txtstokbrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Stok"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txthargabrg" />

    <TextView
        android:id="@+id/txtdeskripsibrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Deskripsi"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtstokbrg" />

    <Button
        android:id="@+id/btncart"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button3"
        android:text="Add To Cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/comicsansms"
        android:textAllCaps="false"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnbeli"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button1"
        android:text="Beli Sekarang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btncart"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/comicsansms"
        android:textAllCaps="false"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>